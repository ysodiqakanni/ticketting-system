@model TickettingSystem.Models.DashboardViewModel
<table style="width:100%">
    <thead>
        <tr>
            <th class="round-1">User Id</th>
            <th>Name</th>
            <th>User Id</th>
            <th>Email</th> 
            <th>Joined On</th> 
            <th></th>
        </tr>
    </thead>

    <tbody style="height:150px; width:inherit; overflow:auto;">
        @if (Model.StaffList.Count < 1)
        {
            <p>No Users Found for that Search Criteria</p>
        }
        else
        {
            foreach (var staff in Model.StaffList)
            {
                <tr class="staffDataRow">
                    <td>@staff.Id</td>
                    <td>@staff.Name</td>
                    <td>@staff.StaffUserId</td>
                    <td>@staff.Email</td>  
                    <td>@staff.JoinedOn.ToString("dd/MM/yyyy")</td> 
                    <td>      <a href="#" class="note-btn" data-toggle="modal" data-target="#updateStaffPasswordModal">Change Password</a></td> 
                </tr>
            }
        }


    </tbody>

</table>